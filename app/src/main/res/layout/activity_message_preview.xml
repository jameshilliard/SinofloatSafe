<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".message.activity.MessagePreviewActivity">

    <ImageView
        android:id="@+id/message_preview_statebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/state_bar_bg" />

    <RelativeLayout
        android:id="@+id/message_preview_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_top_bg">

        <ImageView
            android:id="@+id/message_preview_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:src="@drawable/ic_main_back" />

        <TextView
            android:id="@+id/message_preview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/dimen_5dp"
            android:text="报警详情"
            android:textColor="@color/white"
            android:textSize="@dimen/size_16sp" />

        <ImageView
            android:id="@+id/message_preview_iv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:src="@drawable/ic_main_back" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/message_preview_picture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/message_preview_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Device Name" />

        <TextView
            android:id="@+id/message_preview_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_preview_device"
            android:padding="8dp"
            android:text="Event Name" />

        <TextView
            android:id="@+id/message_preview_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_preview_event"
            android:padding="8dp"
            android:text="08:35 AM" />

        <TextView
            android:id="@+id/message_preview_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_preview_time"
            android:padding="8dp"
            android:text="Event type" />
    </RelativeLayout>

</LinearLayout>
