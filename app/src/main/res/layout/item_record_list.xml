<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/record_rlv_item"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/record_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:text="我是描述..."
            android:visibility="gone"
            android:textColor="@color/white"
            android:layout_centerVertical="true" />
        <ImageView
            android:padding="8dp"
            android:id="@+id/record_item_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_record_video"
            />
        <TextView
            android:visibility="gone"
            android:layout_toRightOf="@+id/record_item_ic"
            android:id="@+id/record_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_centerVertical="true"
            android:text="2016-08-06"/>
        <TextView
            android:layout_toRightOf="@+id/record_item_date"
            android:id="@+id/record_item_begin_time"
            android:padding="8dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间"
            />
        <TextView
            android:id="@+id/record_item_center"
            android:layout_toRightOf="@+id/record_item_begin_time"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="----"/>
        <TextView
            android:layout_toRightOf="@+id/record_item_center"
            android:layout_centerVertical="true"
            android:id="@+id/record_item_end_time"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间"
            />
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/record_item_end_time"
            android:id="@+id/record_item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/record_state_play"/>

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/record_item_duration"
            android:padding="8dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总时长"
            />


    </RelativeLayout>
</LinearLayout>